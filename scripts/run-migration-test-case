#!/bin/bash
set -e
source common/variables
source common/functions

waitInterval="5s"
################################################################################
########## PREPARE WORKSPACE FOR TEST CASE #####################################
echo "Cleaning output directory"
rm -Rf $OUT_DIR
testName=$1
dockerImage=$2
inputDirectory="input/test/$3"
outputDirectory="$OUT_DIR/$testName/"
mkdir -p $outputDirectory
hostDataPath=$(getAbsolutePath $outputDirectory)
cp -R $inputDirectory/* $outputDirectory
containerDataPath="/home/besu"
expectedResults=$outputDirectory/expected-results
docker pull $dockerImage &> /dev/null
################################################################################

################################################################################
########## RUN IMPORT COMMAND ##################################################
runImportCommand $testName $dockerImage $hostDataPath $containerDataPath
sleep $waitInterval
#docker logs $testName
shutdownDocker $testName
################################################################################

################################################################################
########## RUN BESU WITH JSON RPC ##############################################
runBesu $testName $dockerImage $hostDataPath $containerDataPath
sleep $waitInterval
################################################################################

HEX="$(eth_blockNumber)"
echo "[$testName] eth_blockNumber: $HEX"

shutdownDocker $testName
